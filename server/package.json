{
  "name": "blackout-server",
  "version": "1.0.0",
  "description": "Server for blackout project",
  "author": {
    "name": "Blackout",
    "email": "ndoulou.jean@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "build": "babel src --out-dir server --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log  --source-maps inline",
    "server": "nodemon --exec babel-node server.js",
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "socket.io": "^2.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/preset-env": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "concurrently": "^4.0.1",
    "nodemon": "^1.18.7"
  },
  "keywords": [
    "node",
    "express",
    "create-react-app"
  ]
}
